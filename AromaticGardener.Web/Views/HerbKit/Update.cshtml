@model HerbKitVM

<div class="w-100 card border-0 p-3">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Herb Kit</h2>
            </div>
        </div>
    </div>
    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="HerbKit.Id" hidden />
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="HerbKit.Name" class="form-control border shadow" />
                    <label asp-for="HerbKit.Name" class="ms-2"></label>
                    <span asp-validation-for="HerbKit.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="@Model.HerbKit.HerbId" asp-items="@Model.HerbList" class="form-select border shadow">
                        <option disabled selected>-- Select Herb --</option>
                    </select>
                    <label asp-for="HerbKit.Herb.CommonName" class="ms-2"></label>
                    <span asp-validation-for="HerbKit.HerbId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="HerbKit.Description" class="form-control border shadow" />
                    <label asp-for="HerbKit.Description" class="ms-2"></label>
                    <span asp-validation-for="HerbKit.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="HerbKit.Price" class="form-control border shadow" />
                    <label asp-for="HerbKit.Price" class="ms-2"></label>
                    <span asp-validation-for="HerbKit.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="HerbKit.Stock" class="form-control border shadow" />
                    <label asp-for="HerbKit.Stock" class="ms-2"></label>
                    <span asp-validation-for="HerbKit.Stock" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
