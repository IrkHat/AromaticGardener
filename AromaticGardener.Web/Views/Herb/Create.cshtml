@model Herb

<div class="w-100 card border-0 p-3">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Herb</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row">
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="CommonName" class="form-control border shadow" />
                    <label asp-for="CommonName" class="ms-2"></label>
                    <span asp-validation-for="CommonName" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Bloom" class="form-control border shadow" />
                    <label asp-for="Bloom" class="ms-2"></label>
                    <span asp-validation-for="Bloom" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="BestSoilType" class="form-control border shadow" />
                    <label asp-for="BestSoilType" class="ms-2"></label>
                    <span asp-validation-for="BestSoilType" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SoilPhMin" class="form-control border shadow" />
                    <label asp-for="SoilPhMin" class="ms-2"></label>
                    <span asp-validation-for="SoilPhMin" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SoilPhMax" class="form-control border shadow" />
                    <label asp-for="SoilPhMax" class="ms-2"></label>
                    <span asp-validation-for="SoilPhMax" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Watering" class="form-control border shadow" />
                    <label asp-for="Watering" class="ms-2"></label>
                    <span asp-validation-for="Watering" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Insulation" class="form-control border shadow" />
                    <label asp-for="Insulation" class="ms-2"></label>
                    <span asp-validation-for="Insulation" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="GrowthHabit" class="form-control border shadow" />
                    <label asp-for="GrowthHabit" class="ms-2"></label>
                    <span asp-validation-for="GrowthHabit" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="LifeCycle" class="form-control border shadow" />
                    <label asp-for="LifeCycle" class="ms-2"></label>
                    <span asp-validation-for="LifeCycle" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="ImageUrl" class="form-control border shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Create
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}