@model Herb

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Herb</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="CommonName" disabled class="form-control border shadow" />
                    <label asp-for="CommonName" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Description" disabled class="form-control border shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Bloom" disabled class="form-control border shadow" />
                    <label asp-for="Bloom" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="BestSoilType" disabled class="form-control border shadow" />
                    <label asp-for="BestSoilType" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SoilPhMin" disabled class="form-control border shadow" />
                    <label asp-for="SoilPhMin" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="SoilPhMax" disabled class="form-control border shadow" />
                    <label asp-for="SoilPhMax" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Watering" disabled class="form-control border shadow" />
                    <label asp-for="Watering" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Insulation" disabled class="form-control border shadow" />
                    <label asp-for="Insulation" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="GrowthHabit" disabled class="form-control border shadow" />
                    <label asp-for="GrowthHabit" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="LifeCycle" disabled class="form-control border shadow" />
                    <label asp-for="LifeCycle" class="ms-2"></label>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="ImageUrl" disabled class="form-control border shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger w-100">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
