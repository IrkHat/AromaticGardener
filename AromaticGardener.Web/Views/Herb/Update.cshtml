@model HerbVM

<div class="w-100 card border-0 p-3">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Herb</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">
        <form method="post" enctype="multipart/form-data" class="row">
            <input asp-for="Herb.Id" hidden />
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.CommonName" class="form-control border shadow" />
                    <label asp-for="Herb.CommonName" class="ms-2"></label>
                    <span asp-validation-for="Herb.CommonName" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.ScientificName" class="form-control border shadow" />
                    <label asp-for="Herb.ScientificName" class="ms-2"></label>
                    <span asp-validation-for="Herb.ScientificName" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.Description" class="form-control border shadow" />
                    <label asp-for="Herb.Description" class="ms-2"></label>
                    <span asp-validation-for="Herb.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.Bloom" class="form-control border shadow" />
                    <label asp-for="Herb.Bloom" class="ms-2"></label>
                    <span asp-validation-for="Herb.Bloom" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.BestSoilType" class="form-control border shadow" />
                    <label asp-for="Herb.BestSoilType" class="ms-2"></label>
                    <span asp-validation-for="Herb.BestSoilType" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.SoilPhMin" class="form-control border shadow" />
                    <label asp-for="Herb.SoilPhMin" class="ms-2"></label>
                    <span asp-validation-for="Herb.SoilPhMin" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.SoilPhMax" class="form-control border shadow" />
                    <label asp-for="Herb.SoilPhMax" class="ms-2"></label>
                    <span asp-validation-for="Herb.SoilPhMax" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.Watering" class="form-control border shadow" />
                    <label asp-for="Herb.Watering" class="ms-2"></label>
                    <span asp-validation-for="Herb.Watering" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="Herb.Insulation" class="form-control border shadow" />
                    <label asp-for="Herb.Insulation" class="ms-2"></label>
                    <span asp-validation-for="Herb.Insulation" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Herb.GrowthHabitId" asp-items="Model.GrowthHabitList" class="form-select border shadow">
                        <option disabled selected>-- Select Habit --</option>
                    </select>
                    <label asp-for="Herb.GrowthHabit.Habit" class="ms-2"></label>
                    <span asp-validation-for="Herb.GrowthHabitId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <select asp-for="Herb.LifeCycleId" asp-items="Model.LifeCycleList" class="form-select border shadow">
                        <option disabled selected>-- Select Cycle --</option>
                    </select>
                    <label asp-for="Herb.LifeCycle.Cycle" class="ms-2"></label>
                    <span asp-validation-for="Herb.LifeCycleId" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12">
                    <input asp-for="ImageFile" type="file" class="form-control border shadow" />
                    <label asp-for="ImageFile" class="ms-2"></label>
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Update
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
